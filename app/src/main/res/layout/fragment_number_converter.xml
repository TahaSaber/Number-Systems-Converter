<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dfe3ee"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context="com.example.tahasaber.numberingconversion.fragments.NumberConverterFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#dfe3ee"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/decimal_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="13dp"
            android:layout_weight="2"
            android:background="@drawable/bcg2"
            android:orientation="vertical">


            <TextView
                android:id="@+id/decimal_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/title_bg"
                android:padding="5dp"
                android:text="Decimal Result"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/decimal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:hint="Press to convert from decimal to other systems"
                android:padding="5dp"
                android:textColor="#141823"
                android:textColorHint="#7e7a7a"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/binary_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_weight="2"
            android:background="@drawable/bcg2"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/title_bg"
                android:padding="5dp"
                android:text="Binary Result"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/binary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|center_vertical"
                android:hint="Press to convert from binary to other systems"
                android:padding="5dp"
                android:textColor="#141823"
                android:textColorHint="#7e7a7a"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/octal_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_weight="2"
            android:background="@drawable/bcg2"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/title_bg"
                android:padding="5dp"
                android:text="Octal Result"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/octal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|center_vertical"
                android:hint="Press to convert from octal to other systems"
                android:padding="5dp"
                android:textColor="#141823"
                android:textColorHint="#7e7a7a"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/hexadecimal_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_weight="2"
            android:background="@drawable/bcg2"
            android:orientation="vertical">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/title_bg"
                android:padding="5dp"
                android:text="Hexadecimal Result"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/hexadecimal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|center_vertical"
                android:hint="Press to convert from hexadecimal to other systems"
                android:padding="5dp"
                android:textColor="#141823"
                android:textColorHint="#7e7a7a"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>
