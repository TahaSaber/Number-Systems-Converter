<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dfe3ee"
    android:fillViewport="true"
    tools:context="com.example.tahasaber.numberingconversion.fragments.BinaryRepresentationFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#dfe3ee"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/decimal_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="13dp"
            android:layout_weight="2"
            android:background="@drawable/bcg2"
            android:orientation="vertical">


            <TextView
                android:id="@+id/decimal_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/title_bg"
                android:padding="7dp"
                android:text="Decimal Result"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/decimal_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|center_vertical"
                android:hint="Press to convert from +ve / -ve integers"
                android:padding="5dp"
                android:textColor="#141823"
                android:textColorHint="#7e7a7a"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_weight="2"
            android:background="@drawable/bcg2"
            android:orientation="vertical"
            android:paddingBottom="8dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/title_bg"
                android:padding="7dp"
                android:text="Sign and Magnitude Format"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/sign_magnitude"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|center_vertical"
                android:hint="Sign and Magnitude representation"
                android:padding="5dp"
                android:textColor="#141823"
                android:textColorHint="#7e7a7a"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_weight="2"
            android:background="@drawable/bcg2"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/title_bg"
                android:padding="5dp"
                android:text="One's Complement Format"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/ones_complement"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|center_vertical"
                android:hint="One's complement representation"
                android:padding="5dp"
                android:textColor="#141823"
                android:textColorHint="#7e7a7a"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_weight="2"
            android:background="@drawable/bcg2"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/title_bg"
                android:padding="7dp"
                android:text="Two's Complement Format"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/twos_complement"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|center_vertical"
                android:hint="Two's complement representation"
                android:padding="5dp"
                android:textColor="#141823"
                android:textColorHint="#7e7a7a"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_weight="2"
            android:background="@drawable/bcg2"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/title_bg"
                android:padding="7dp"
                android:text="Excess Notation Format"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/excess_notation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|center_vertical"
                android:hint="Excess notation representation"
                android:padding="5dp"
                android:textColor="#141823"
                android:textColorHint="#7e7a7a"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>
