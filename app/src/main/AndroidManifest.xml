<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tahasaber.numberingconversion">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_fci"
        android:label="Number Converter"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".dialogActivities.EnterDecimalNumberActivity"
            android:theme="@android:style/Theme.Holo.Dialog.NoActionBar" />
        <activity
            android:name=".dialogActivities.EnterBinaryNumberActivity"
            android:theme="@android:style/Theme.Holo.Dialog.NoActionBar" />
        <activity
            android:name=".dialogActivities.EnterOctalNumberActivity"
            android:theme="@android:style/Theme.Holo.Dialog.NoActionBar" />
        <activity
            android:name=".dialogActivities.EnterHexaNumberActivity"
            android:theme="@android:style/Theme.Holo.Dialog.NoActionBar" />
        <activity
            android:name=".dialogActivities.EnterDecimalForNegativeRepr"
            android:theme="@android:style/Theme.Holo.Dialog.NoActionBar" />
        <activity
            android:name=".dialogActivities.EnterRealToEncode"
            android:theme="@android:style/Theme.Holo.Dialog.NoActionBar" />
        <activity
            android:name=".dialogActivities.EnterBinaryToDecode"
            android:theme="@android:style/Theme.Holo.Dialog.NoActionBar" />
        <activity android:name=".MainActivity"></activity>
    </application>

</manifest>